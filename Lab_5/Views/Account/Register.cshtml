@using Lab_5.ViewModels.Identities
@using Lab_5.ViewModels.Users

@model RegisterViewModel
<h2>Регистрация нового пользователя</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label class="control-label" asp-for="Email"></label><br />
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Year"></label><br />
        <input class="form-control" asp-for="Year" />
        <span asp-validation-for="Year"></span>
    </div>
    <div class="form-group">
        <label class="control-label" asp-for="Password"></label><br />
        <input class="form-control" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group"> 
        <label class="control-label" asp-for="PasswordConfirm"></label><br />
        <input class="form-control" asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div class="form-group mt-3">
        <input class="form-control btn btn-primary" type="submit" value="Регистрация" />
    </div>
</form>