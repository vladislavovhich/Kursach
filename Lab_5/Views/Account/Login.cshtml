@using Lab_5.ViewModels.Identities
@using Lab_5.ViewModels.Users

@model LoginViewModel

<h2>Вход в приложение</h2>
<form method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label class="control-label" asp-for="Email"></label><br />
        <input class="form-control"  asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label class="control-label"  asp-for="Password"></label><br />
        <input class="form-control"  asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="RememberMe"></label><br />
        <input  asp-for="RememberMe" />
    </div>
    <div>
        <input type="submit" value="Войти" class="form-control btn btn-primary" />
    </div>
</form>