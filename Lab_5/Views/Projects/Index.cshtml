@using Lab_5.ViewModels
@using Lab_5.ViewModels.Projects
@using Lab_5.Models
@model PaginationViewModel<Project, ProjectFilterViewModel, ProjectSortViewModel>

@addTagHelper *, Lab_5

@{
    ViewData["Title"] = "Index";
}

<h1>Список проектов</h1>

<form method="get" class="mt-1">
    <label class="form-inline">Название: </label>
    <input class="form-control" name="name" text="@(Model.FilterViewModel.SelectedName)" />

    <input type="submit" value="Фильтр" class="mt-2 btn btn-primary" />
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-name="@(Model.FilterViewModel.SelectedName)"
                   asp-route-page="@(Model.PageViewModel.PageNumber)"
                   asp-route-sortOrder="@(Model.SortViewModel.NameSort)">Название</a>
            </th>
            <th>
                 <a asp-action="Index"
                   asp-route-name="@(Model.FilterViewModel.SelectedName)"
                   asp-route-page="@(Model.PageViewModel.PageNumber)"
                   asp-route-sortOrder="@(Model.SortViewModel.NameSort)">Выполнен</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsStopped)
            </td>
            <td>
                    @if (User.Identity.IsAuthenticated && (User.IsInRole("MainAdmin") || User.IsInRole("Admin")))
                    {
                <a asp-action="Edit" asp-route-id="@item.ProjectId">Edit</a> 
                    }
                <a asp-action="Details" asp-route-id="@item.ProjectId">Details</a> 
                    @if (User.Identity.IsAuthenticated && (User.IsInRole("MainAdmin") || User.IsInRole("Admin")))
                    {
                <a asp-action="Delete" asp-route-id="@item.ProjectId">Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
<page-link page-model="Model.PageViewModel" page-action="Index"
           page-url-name="@(Model.FilterViewModel.SelectedName)"
           page-url-sortOrder="@(Model.SortViewModel.Current)"></page-link>
